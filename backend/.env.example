# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=arxiv_papers
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432

# Qdrant settings
QDRANT_HOST=qdrant
QDRANT_PORT=6333
COLLECTION_NAME=arxiv_ml_papers
VECTOR_DIM=1024  # For BGE-Large embeddings

# Embedding settings
# For HuggingFace BGE-Large: EMBED_MODEL=BAAI/bge-large-en-v1.5
# For Ollama BGE-Large: EMBED_MODEL=bge-large:latest
EMBED_MODEL=bge-large:latest
OLLAMA_EMBED_MODEL=bge-large:latest

# ArXiv settings
MAX_RESULTS=5
SHORT_SUMMARY_LENGTH=100
MAX_RETRIES=3
RETRY_DELAY_BASE=2.0
RETRY_JITTER=0.5

# LLM settings
# Options: "openai" or "ollama"
LLM_PROVIDER=ollama
OPENAI_MODEL=gpt-3.5-turbo
OLLAMA_MODEL=deepseek-coder:latest
OLLAMA_BASE_URL=http://ollama:11434
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=512
LLM_CONTEXT_WINDOW=4096

# User settings
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin

# Security settings
SECRET_KEY=your-secret-key-here
